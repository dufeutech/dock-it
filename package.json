{
  "name": "@dufeut/dock-it",
  "version": "0.1.0",
  "description": "A powerful, resizable docking system web component with draggable tabs, splittable panels, and layout serialization",
  "type": "module",
  "module": "./dist/lumino-easy.es.js",
  "main": "./dist/lumino-easy.iife.js",
  "types": "./dist/bundle.d.ts",
  "exports": {
    ".": {
      "types": "./dist/bundle.d.ts",
      "import": "./dist/lumino-easy.es.js",
      "require": "./dist/lumino-easy.iife.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc -p tsconfig.build.json",
    "build:lib": "pnpm build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "web-component",
    "dock",
    "docking",
    "tabs",
    "split-pane",
    "lumino",
    "jupyterlab",
    "ide",
    "layout",
    "drag-and-drop",
    "resizable",
    "panels"
  ],
  "author": "dufeut",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dufeut/dock-it-wc.git"
  },
  "bugs": {
    "url": "https://github.com/dufeut/dock-it-wc/issues"
  },
  "homepage": "https://github.com/dufeut/dock-it-wc#readme",
  "dependencies": {
    "@lumino/widgets": "^2.7.2"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^6.0.3",
    "jsdom": "^26.0.0",
    "lightningcss": "^1.28.0",
    "terser": "^5.37.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^3.1.0"
  },
  "engines": {
    "node": ">=18"
  }
}

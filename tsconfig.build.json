{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist",
    "outDir": "./dist"
  },
  "include": ["src/bundle.ts", "src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "src/main.ts", "src/index.ts"]
}
